generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Blog {
  id      String    @id @default(cuid())
  title   String
  article String
  image   String
  imageId String
  date    String
  tags    BlogTag[]
}

model BlogTag {
  id     String  @id @default(cuid())
  name   String
  blog   Blog?   @relation(fields: [blogId], references: [id])
  blogId String?
}

model Project {
  id    String @id @default(cuid())
  title String
  link  String

  date        String
  image       String
  imageId     String
  projectTags ProjectTag[]
}

model ProjectTag {
  id   String @id @default(cuid())
  name String

  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
}

model Contact {
  id      String   @id @default(cuid())
  name    String
  email   String
  message String
  date    DateTime @default(now())
}
