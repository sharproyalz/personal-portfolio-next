generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Blog {
  id      String    @id @default(cuid())
  title   String
  article String
  image   String
  imageId String
  month   Int
  year    Int
  tags    BlogTag[]
}

model BlogTag {
  id     String  @id @default(cuid())
  name   String
  blog   Blog?   @relation(fields: [blogId], references: [id])
  blogId String?
}

model Project {
  id         String       @id @default(cuid())
  title      String
  monthStart Int
  yearStart  Int
  monthEnd   Int?
  yearEnd    Int?
  image      String
  imageId    String
  tags       ProjectTag[]
}

model ProjectTag {
  id        String   @id @default(cuid())
  name      String
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
}

model Contact {
  id      String   @id @default(cuid())
  name    String
  email   String
  message String
  date    DateTime @default(now())
}
